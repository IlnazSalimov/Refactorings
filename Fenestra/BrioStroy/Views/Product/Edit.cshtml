@model Brio.Models.EditProduct

@{
    ViewBag.Title = "РЕДАКТИРОВАТЬ ПРОДУКТ";
    Layout = "~/Views/Layouts/LayoutDefault.cshtml";
}

@section Styles{
    <link href="~/Content/css/kendo.common.min.css" rel="stylesheet" />
    <link href="~/Content/css/kendo.default.min.css" rel="stylesheet" />

    <style>
        table.k-editor {
            display: inline-table;
            width: 65%;
        }
    </style>
}

<div class="container run1">
    <div data-id="0" class="slider"></div>
</div>
<div class="block_ins">
    <div class="title">
        @ViewBag.Title
    </div>
    <article class="page-content" style="padding: 30px; box-sizing: border-box; overflow:auto;">
        @using (Html.BeginForm("Edit", "Product", FormMethod.Post, new { @class = "pure-form pure-form-aligned", enctype = "multipart/form-data" }))
        {
            @Html.ValidationSummary(true)
            <fieldset>
                @Html.HiddenFor(model => model.ID)
                <div class="pure-control-group">
                    @Html.LabelFor(model => model.Title)
                    @Html.TextBoxFor(model => model.Title, new { @class = "pure-input-1-2" })
                    @Html.ValidationMessageFor(model => model.Title)
                </div>
                <div class="pure-control-group">
                    @Html.LabelFor(model => model.Description)
                    @Html.TextAreaFor(model => model.Description, new { @class = "pure-input-1-2" })
                    @Html.ValidationMessageFor(model => model.Description)
                </div>
                @Html.HiddenFor(model => model.CompanyId)
                <div class="pure-controls">
                    <button type="submit" class="pure-button pure-button-primary">СОХРАНИТЬ</button>
                </div>
            </fieldset>
        }
    </article>
</div>

<script src="~/Content/js/kendo.web.min.js"></script>
<script src="~/Content/js/kendo.ru-RU.js"></script>
<script>
    (function () {
        $("#Description").kendoEditor({
            encoded: false
        });
    })();
</script>